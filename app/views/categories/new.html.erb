<h1 style="align-items: center">Create new Category</h1>
<%= form_with(model: @category) do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: flex; padding: 5px; align-items: center">
    <%= form.label :name, "Category Name: ", style: "display: block; padding: 5px" %>
    <%= form.text_field :name, placeholder: "Enter a name" %>
  </div>

  <div style="margin-top: 1rem; padding: 5px">
    <%= form.submit%>
  </div>
<% end %>

<div>
  <%= link_to '[Cancel and return to articles listing]', articles_path %>
</div>
