<%= form_with(model: @user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :name, placeholder: "Enter a username" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, placeholder:"Enter your email address" %>
  </div>

  <div>
    <%= form.label :password, style:"display: block" %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div>
    <%= form.submit(@user.new_record? ? "Sign Up" : "Update Account")%>
  </div>
<% end %>

<div>
  <%= link_to '[Cancel and return to articles listing]', articles_path %>
</div>
